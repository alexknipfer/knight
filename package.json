{
  "name": "knight",
  "version": "0.0.1",
  "description": "The next best text editor",
  "license": "GPL-3.0",
  "main": "public/electron.js",
  "homepage": "./",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alexknipfer/knight.git"
  },
  "bugs": {
    "url": "https://github.com/alexknipfer/knight/issues"
  },
  "keywords": [
    "react",
    "electron",
    "code",
    "editor"
  ],
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron-dev": "cross-env NODE_ENV=development concurrently \"BROWSER=none npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-pack": "cross-env NODE_ENV=development electron-builder --dir",
    "electron-dist": "cross-env NODE_ENV=development electron-builder build -m",
    "prettier": "prettier --write \"**/*.{tsx,ts,css,md,js,vue,html,json}\""
  },
  "dependencies": {
    "electron-is-dev": "^1.0.1",
    "react": "^16.8.1",
    "react-dom": "^16.8.1",
    "react-scripts": "2.1.3",
    "styled-components": "^4.1.3",
    "typescript": "3.3.3"
  },
  "devDependencies": {
    "@types/jest": "24.0.0",
    "@types/node": "10.12.24",
    "@types/react": "16.8.2",
    "@types/react-dom": "16.8.0",
    "@types/styled-components": "^4.1.8",
    "concurrently": "^4.1.0",
    "cross-env": "^5.2.0",
    "electron": "^4.0.4",
    "electron-builder": "^20.38.5",
    "prettier": "^1.16.4",
    "wait-on": "^3.2.0"
  },
  "build": {
    "appId": "com.knipferdev.knighteditor",
    "directories": {
      "buildResources": "assets"
    },
    "extends": null,
    "buildDependenciesFromSource": true,
    "nodeGypRebuild": false,
    "npmRebuild": false
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
